@model IEnumerable<webbandt.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Danh sách Sản phẩm</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm sản phẩm mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Hình ảnh</th>

                    <th style="min-width: 100px;">Bộ nhớ</th>
                    <th>RAM</th>
                    <th>Pin</th>
                    <th>Chipset</th>

                    <th style="width: 150px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td class="text-danger fw-bold">
                            @item.Price.ToString("N0") đ
                        </td>

                        <td style="max-width: 200px; font-size: 13px;">
                            @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                            {
                                <span>@item.Description.Substring(0, 50)...</span>
                            }
                            else
                            {
                                <span>@item.Description</span>
                            }
                        </td>

                        <td class="text-center">
                            <img src="@item.ImageUrl" style="width: 70px; height: 70px; object-fit: contain; border: 1px solid #ddd; border-radius: 5px;" alt="@item.Name" />
                        </td>

                        <td class="text-center">
                            <span class="badge bg-info text-dark">@item.DungLuong</span>
                        </td>

                        <td class="text-center">
                            @item.Ram
                        </td>

                        <td style="font-size: 13px;">
                            @item.Pin
                        </td>

                        <td style="font-size: 13px;">
                            @item.Chip
                        </td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mb-1" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info mb-1" title="Chi tiết">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-1" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
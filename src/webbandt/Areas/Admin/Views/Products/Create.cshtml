@model webbandt.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaHang" class="control-label">Hãng sản xuất</label>
                <select asp-for="MaHang" class="form-control" asp-items="ViewBag.MaHang">
                    <option value="">-- Chọn hãng sản xuất --</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Chọn ảnh sản phẩm</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SoLuongTon" class="control-label fw-bold">Số lượng trong kho</label>
                <input asp-for="SoLuongTon" class="form-control" type="number" value="10" min="0" />
                <span asp-validation-for="SoLuongTon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="card mt-4 mb-3">
                <div class="card-header bg-info text-white">
                    <strong>Thông số kỹ thuật</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Màn hình</label>
                            <input asp-for="ManHinh" class="form-control" placeholder="6.7 inch, OLED..." />
                            <span asp-validation-for="ManHinh" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Hệ điều hành</label>
                            <input asp-for="HeDieuHanh" class="form-control" placeholder="6.7 inch, OLED..." />
                            <span asp-validation-for="HeDieuHanh" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Camera trước</label>
                            <input asp-for="CameraTruoc" class="form-control" placeholder="48MP + 12MP..." />
                            <span asp-validation-for="CameraTruoc" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Camera sau</label>
                            <input asp-for="CameraSau" class="form-control" placeholder="48MP + 12MP..." />
                            <span asp-validation-for="CameraSau" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Chipset (CPU)</label>
                            <input asp-for="Chip" class="form-control" placeholder="Snapdragon 8 Gen 3..." />
                            <span asp-validation-for="Chip" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">RAM</label>
                            <input asp-for="Ram" class="form-control" placeholder="8GB / 12GB..." />
                            <span asp-validation-for="Ram" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Bộ nhớ trong (ROM)</label>
                            <select asp-for="DungLuong" class="form-control">
                                <option value="64GB">64GB</option>
                                <option value="128GB">128GB</option>
                                <option value="256GB">256GB</option>
                                <option value="512GB">512GB</option>
                                <option value="1TB">1TB</option>
                            </select>
                            <span asp-validation-for="DungLuong" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="control-label">Pin & Sạc</label>
                            <input asp-for="Pin" class="form-control" placeholder="5000mAh, 45W..." />
                            <span asp-validation-for="Pin" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<webbandt.Models.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h3 class="mt-4">Danh sách đơn hàng</h3>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tổng hợp đơn hàng
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>
                                <b>@item.HoTen</b><br>
                                <small>@item.SoDienThoai</small>
                            </td>
                            <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-danger fw-bold">@item.TongTien.ToString("N0") đ</td>
                            <td>
                                @if (item.TrangThai == 0)
                                {
                                    <span class="badge bg-secondary">Mới đặt</span>
                                }
                                else if (item.TrangThai == 1)
                                {

                                    <span class="badge bg-primary">Đang giao</span>
                                }
                                else if (item.TrangThai == 2)
                                {

                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {

                                    <span class="badge bg-danger">Đã hủy</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                    <i class="fas fa-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
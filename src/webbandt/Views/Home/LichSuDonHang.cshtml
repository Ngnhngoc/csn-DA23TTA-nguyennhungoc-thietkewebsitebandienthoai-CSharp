@model IEnumerable<webbandt.Models.DonHang>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">Lịch Sử Đơn Hàng Của Bạn</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            Bạn chưa có đơn hàng nào. <a href="/Home/Sanpham">Mua sắm ngay!</a>
        </div>
    }
    else
    {
        <div class="accordion" id="accordionOrders">
            @foreach (var donHang in Model)
            {
                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-header bg-white" id="heading-@donHang.Id">
                        <h5 class="mb-0 d-flex justify-content-between align-items-center">
                            <button class="btn btn-link text-decoration-none text-dark fw-bold" type="button" 
                                    data-bs-toggle="collapse" data-bs-target="#collapse-@donHang.Id" 
                                    aria-expanded="true" aria-controls="collapse-@donHang.Id">
                                <i class="fas fa-file-invoice-dollar me-2"></i> 
                                Đơn hàng #@donHang.Id - @donHang.NgayDat.ToString("dd/MM/yyyy HH:mm")
                            </button>
                            <span class="text-danger fw-bold">Tổng: @donHang.TongTien.ToString("#,##0") đ</span>
                        </h5>
                    </div>

                    <div id="collapse-@donHang.Id" class="collapse" aria-labelledby="heading-@donHang.Id" data-bs-parent="#accordionOrders">
                        <div class="card-body bg-light">
                            <p><strong>Người nhận:</strong> @donHang.HoTen - @donHang.SoDienThoai</p>
                            <p><strong>Địa chỉ:</strong> @donHang.DiaChi</p>
                            <hr />
                            
                            <table class="table table-sm table-bordered bg-white">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th class="text-center">Kích thước</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-end">Đơn giá</th>
                                        <th class="text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(donHang.ChiTietDonHangs != null)
                                    {
                                        foreach (var chiTiet in donHang.ChiTietDonHangs)
                                        {
                                            <tr>
                                                <td>@chiTiet.TenSanPham</td>
                                                <td class="text-center">@chiTiet.KichThuoc</td>
                                                <td class="text-center">@chiTiet.SoLuong</td>
                                                <td class="text-end">@chiTiet.DonGia.ToString("#,##0") đ</td>
                                                <td class="text-end">@((chiTiet.SoLuong * chiTiet.DonGia).ToString("#,##0")) đ</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
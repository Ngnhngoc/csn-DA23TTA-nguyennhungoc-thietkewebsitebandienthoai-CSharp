    <script>
        // 1. Xử lý Menu Mobile (Giữ nguyên)
        const bar = document.querySelector('#bar');
        const nav = document.querySelector('#menu');
        const close = document.querySelector('#close');
        if (bar) bar.addEventListener('click', () => { nav.classList.toggle('active'); });
        if (close) close.addEventListener('click', () => { nav.classList.remove('active'); });

        // 2. Xử lý Gửi Mail (CODE MỚI)
        const form = document.getElementById('contactForm');

        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault(); // Ngăn web load lại trang

                // Hiệu ứng nút bấm "Đang gửi..."
                const btn = e.target.querySelector('button');
                const originalText = btn.innerText;
                btn.innerText = "Đang gửi...";
                btn.disabled = true;

                // Lấy dữ liệu từ form
                const formData = new FormData(form);

                // Gửi dữ liệu về HomeController
                fetch('/Home/GuiTinNhan', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Nếu gửi thành công
                        document.getElementById('successAlert').classList.remove('d-none'); // Hiện thông báo xanh
                        form.reset(); // Xóa trắng ô nhập
                    } else {
                        // Nếu lỗi (ví dụ sai mật khẩu ứng dụng)
                        alert("Có lỗi xảy ra: " + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("Không thể kết nối đến server.");
                })
                .finally(() => {
                    // Dù thành công hay thất bại cũng trả lại nút bấm như cũ
                    btn.innerText = originalText;
                    btn.disabled = false;

                    // Ẩn thông báo sau 5 giây
                    setTimeout(() => {
                         document.getElementById('successAlert').classList.add('d-none');
                    }, 5000);
                });
            });
        }
    </script>

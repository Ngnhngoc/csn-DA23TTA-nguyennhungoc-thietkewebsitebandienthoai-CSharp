        /* --- HEADER --- */
        #header {
            padding: 10px 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #E3E6F3;
            box-shadow: 0 5px 15px rgba(0,0,0,0.06);
            z-index: 999;
            position: sticky;
            top: 0;
            left: 0;
        }

            #header .logo {
                height: 50px;
                width: auto;
                mix-blend-mode: multiply;
            }

        #menu {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            #menu li {
                list-style: none;
                padding: 0 20px;
                position: relative;
            }

                #menu li a {
                    text-decoration: none;
                    font-size: 16px;
                    font-weight: 600;
                    color: #1a1a1a;
                    transition: 0.3s ease;
                }

                    #menu li a:hover, #menu li a.active {
                        color: #088178;
                    }

                        #menu li a.active::after {
                            content: "";
                            width: 30%;
                            height: 2px;
                            background: #088178;
                            position: absolute;
                            bottom: -4px;
                            left: 20px;
                        }

        /* --- FORM LIÊN HỆ --- */
        .contact-box {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .icon-box {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
            margin-right: 15px;
        }

        .bg-primary-soft {
            background: #088178;
        }

        /* --- CSS FOOTER (COPY TỪ TRANG CHỦ CỦA BẠN) --- */
        footer {
            background-color: #222; /* Nền tối */
            padding: 40px 0;
            margin-top: 40px;
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .footer-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .footer-col {
            flex: 1;
            min-width: 250px;
            margin-bottom: 20px;
            padding: 0 15px;
        }

            .footer-col h4 {
                color: #FFD400; /* Màu vàng */
                font-size: 16px;
                font-weight: 700;
                text-transform: uppercase;
                margin-bottom: 20px;
            }

            .footer-col p {
                color: #ccc;
                font-size: 14px;
                line-height: 1.6;
                margin-bottom: 10px;
            }

            .footer-col a {
                display: block;
                color: #ccc;
                text-decoration: none;
                font-size: 14px;
                margin-bottom: 10px;
                transition: 0.3s;
            }

                .footer-col a:hover {
                    color: #FFD400;
                    padding-left: 5px;
                }

        .social-icons a {
            display: inline-block;
            width: 30px;
            height: 35px;
            color: #fff;
            text-align: center;
            line-height: 35px;
            border-radius: 5px;
            margin-right: 10px;
  
            

@model List<webbandt.Models.Sanphamtronggiohang>
@{
    Layout = null;
    ViewData["Title"] = "Giỏ Hàng";
    decimal tongTien = 0;
    if (Model != null)
    {
        tongTien = Model.Sum(x => x.ThanhTien);
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ Hàng - Web Bán Điện Thoại</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">

    <style>
        body {
            font-family: sans-serif;
            background-color: #f5f5fa;
        }

        .cart-img {
            width: 80px;
            height: 80px;
            object-fit: contain;
            border: 1px solid #eee;
            border-radius: 5px;
            background: #fff;
        }

        .table > :not(caption) > * > * {
            vertical-align: middle;
        }

        #header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px 80px;
            background: #E3E6F3;
            box-shadow: 0 5px 15px rgba(0,0,0,0.06);
            z-index: 999;
            position: sticky;
            top: 0;
            left: 0;
        }

        #menu {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            #menu li {
                list-style: none;
                padding: 0 20px;
                position: relative;
            }

                #menu li a {
                    text-decoration: none;
                    font-size: 16px;
                    font-weight: 600;
                    color: #1a1a1a;
                    transition: 0.3s ease;
                }

                    #menu li a:hover, #menu li a.active {
                        color: #088178;
                    }

        /* CSS cho ô nhập số lượng đẹp hơn */
        .input-qty {
            width: 60px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 5px;
        }
    </style>
</head>
<body>

    <section id="header">
        <a href="/"><img src="~/images/logodoi.jpg" class="logo" alt="Logo" style="width:120px;"></a>
        <div>
            <ul id="menu">
                <li id="lg-home"><a class="danhdau" href="/"><i class="fas fa-home"></i></a></li>
                <li><a href="/Home/Sanpham">Sản Phẩm</a></li>
                
                <li><a href="/Home/Lienhe">Liên hệ</a></li>
                <li><a href="/Home/LichSuDonHang">Lịch sử đơn hàng</a></li>
                <li id="lg-bag"><a href="/Home/GioHang" class="active"><i class="fas fa-shopping-bag"></i></a></li>
            </ul>
        </div>
    </section>

    <div class="container" style="margin-top: 50px; margin-bottom: 50px; min-height: 400px;">
        <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

        @if (Model == null || Model.Count == 0)
        {
            <div class="text-center bg-white p-5 rounded shadow-sm border">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3" style="color:#ddd;"></i>
                <h4>Giỏ hàng đang trống!</h4>
                <p class="text-muted">Bạn chưa chọn sản phẩm nào.</p>
                <a href="/Home/Sanpham" class="btn btn-primary mt-2">Quay lại mua sắm</a>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Sản phẩm</th>
                                        <th>Đơn giá</th>
                                        <th class="text-center">Số lượng</th>
                                        <th>Thành tiền</th>
                                        <th class="text-center">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.HinhAnh" class="cart-img me-3">
                                                    <div>
                                                        <strong style="display:block;">@item.TenSanPham</strong>
                                                        <span class="badge bg-secondary">@item.KichThuoc</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-danger fw-bold">@item.DonGia.ToString("N0") đ</td>

                                            <td class="text-center">
                                                <input type="number"
                                                       min="1"
                                                       value="@item.SoLuong"
                                                       class="input-qty"
                                                       onchange="window.location.href='/Home/CapNhatSoLuong?id=@item.ProductId&soLuong=' + this.value" />
                                            </td>
                                            <td class="fw-bold">@item.ThanhTien.ToString("N0") đ</td>

                                            <td class="text-center">
                                                <a href="/Home/XoaKhoiGio?id=@item.ProductId"
                                                   class="text-danger"
                                                   onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?')">
                                                    <i class="fas fa-trash-alt fa-lg"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card p-4 shadow-sm border-0 bg-white">
                        <h4 class="mb-3">Tóm tắt đơn hàng</h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span class="fw-bold">@tongTien.ToString("N0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-success">Giảm giá:</span>
                            <span>0 đ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <strong style="font-size:18px;">Tổng cộng:</strong>
                            <strong style="font-size:22px; color:#d70018;">@tongTien.ToString("N0") đ</strong>
                        </div>
                        <form asp-action="DatHang" asp-controller="Home" method="post">

                            <h5 class="mt-3 mb-3">Thông tin nhận hàng:</h5>

                            <div class="form-group mb-2">
                                <input type="text" name="hoTen" class="form-control" placeholder="Họ và tên (*)" required />
                            </div>

                            <div class="form-group mb-2">
                                <input type="tel"
                                       name="sdt"
                                       class="form-control"
                                       placeholder="Số điện thoại (*)"
                                       required
                                       maxlength="10"
                                       pattern="0[0-9]{9}"
                                       title="Số điện thoại phải có đúng 10 chữ số và bắt đầu bằng số 0"
                                       oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                            </div>

                            <div class="form-group mb-2">
                                <input type="text" name="Email" class="form-control"
                                       value="@(User.Identity?.IsAuthenticated == true ? User.Identity?.Name : "")"
                                       placeholder="Email (để nhận thông báo)" />
                            </div>

                            <div class="form-group mb-2">
                                <textarea name="diaChi" class="form-control" rows="2" placeholder="Địa chỉ giao hàng (*)" required></textarea>
                            </div>

                            <div class="form-group mb-3">
                                <textarea name="ghiChu" class="form-control" rows="1" placeholder="Ghi chú thêm (nếu có)"></textarea>
                            </div>
                            <div class="payment-info mb-4 p-3 bg-light rounded border border-primary border-opacity-25">
                                <h6 class="mb-2 fw-bold small text-uppercase text-primary">
                                    <i class="fas fa-wallet me-1"></i> Phương thức thanh toán
                                </h6>
                                <div class="d-flex align-items-center mt-2">
                                    <i class="fas fa-truck text-dark fa-lg me-3"></i>
                                    <div>
                                        <strong class="d-block text-dark">Thanh toán khi nhận hàng (COD)</strong>
                                        <small class="text-muted">Bạn sẽ thanh toán cho Shipper khi nhận được hàng.</small>
                                    </div>
                                </div>
                                <input type="hidden" name="PaymentMethod" value="COD">
                            </div>

                            <button type="submit" class="btn btn-danger w-100 py-3 fw-bold text-uppercase shadow-sm">
                                XÁC NHẬN ĐẶT HÀNG <i class="fas fa-check-circle ms-2"></i>
                            </button>
                        </form>

                        <a href="/Home/Sanpham" class="btn btn-outline-secondary w-100 mt-2">
                            Mua thêm sản phẩm khác
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <footer class="text-center mt-5 py-4 bg-light border-top">
        <p class="mb-0">© 2025 CSN Thiết kế bởi Nguyễn Như Ngọc.</p>
    </footer>

</body>
</html>